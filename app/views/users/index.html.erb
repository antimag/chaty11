<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% User.all.each_with_index do |user, index| %>
      <tr class="success">
        <td><%= index +=1 %></td>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.phone_number %></td>
        <td><%= link_to "Send Message", "#", class: "btn btn-success btn-xs start-conversation",
      "data-sid" => current_user.id, "data-rip" => user.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
